@model TravelExpertsData.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div style="background: #6998AB;">
    <div class="d-flex justify-content-center align-items-center vh-100" style="
        background: linear-gradient(145deg, #3b6fa5, #2c4d75);
    ">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-3" style="overflow: hidden; background: linear-gradient(145deg, #ffffff, #e6e6e6);">
            <div class="card-body p-5">
                <h2 class="text-center mb-4" style="font-weight: bold;">Login</h2>
                <form asp-action="Login" method="post" class="row justify-content-center row-gap-1">
                    <div class="form-group col-lg-8 mb-2">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control rounded-pill" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group col-lg-8">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control rounded-pill" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="col-lg-8 mt-4 text-center">
                        <button type="submit" class="btn btn-primary rounded-pill w-100">Login</button>
                    </div>
                       
                    <div class="form-check col-lg-8 mt-3">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <div class="col-lg-6 mt-3 text-center">
                        <p>Don't have an Account? <a asp-action="Register" class="text-primary fw-bold">Register</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
