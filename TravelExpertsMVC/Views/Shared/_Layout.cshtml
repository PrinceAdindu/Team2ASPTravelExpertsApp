<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - TravelExpertsMVC</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/TravelExpertsMVC.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
	<nav class="site-nav position-fixed top-0" style="background: #6998AB;">
		<div class="container">
			<div class="site-navigation">

				<a asp-controller="Home" asp-action="Index" class="logo m-0"><img src="~/images/logo.png" alt="Logo" class="" style="width: 75px" /></a>

				<ul class="js-clone-nav d-none d-lg-inline-block text-left site-menu float-right">
					<li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
					@* <li><a asp-controller="Home" asp-action="About">About</a></li> *@
					<li><a asp-controller="Package" asp-action="Index">Packages</a></li>
					<li><a asp-controller="Contact" asp-action="">Contact Us</a></li>
				</ul>

				<partial name="LoginPartial" />

				<a href="#" class="burger ml-auto float-right site-menu-toggle js-menu-toggle d-inline-block d-lg-none light" data-toggle="collapse" data-target="#main-navbar">
					<span></span>
				</a>

			</div>
		</div>
	</nav>

	<main role="main" style="padding-top: 4rem;" class="pb-3">
		@RenderBody()
	</main>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
